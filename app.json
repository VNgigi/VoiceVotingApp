{
  "expo": {
    "name": "VoiceVotingApp2",
    "slug": "VoiceVotingApp2",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "voicevotingapp2",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.victor1282.VoiceVotingApp2",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to the microphone to allow you to vote by voice.",
        "NSSpeechRecognitionUsageDescription": "This app needs speech recognition to hear your vote.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photos to let you upload candidate images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/icon.png"
      },
      "package": "com.victor1282.VoiceVotingApp2",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-font",
      "expo-web-browser",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you upload candidate images."
        }
      ],
      "expo-speech-recognition",
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "52132816-86bc-4ff5-989c-fafba5dca2dc"
      }
    }
  }
}